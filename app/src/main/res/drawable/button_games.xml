<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            android:shape="rectangle"
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#98ff98"/>
            <gradient android:angle="-90" android:startColor="#00ffff" android:endColor="#c45aec"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            android:shape="rectangle"
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#728c00"/>
            <gradient android:angle="-90" android:startColor="#00ffff" android:endColor="#c45aec"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item >
    <item>
        <shape>
            android:shape="rectangle"
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#728c00"/>
            <gradient android:angle="-90" android:startColor="#00ffff" android:endColor="#c45aec"/>
        </shape>
    </item>
</selector>