<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorAccent" />

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#41a317">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hello_kid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#f0ffff"
                    android:text="Hello Kid! Welcome!"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    tools:text="Hello Kid! Welcome!" />

                <Button
                    android:id="@+id/games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="50px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/button_games"
                    android:layout_below="@+id/hello_kid"
                    android:text="Games" />

                <Button
                    android:id="@+id/puzzle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/button_puz"
                    android:layout_marginTop="50px"
                    android:layout_below="@+id/hello_kid"
                    android:text="Puzzles" />

                <Button
                    android:id="@+id/journal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diary"
                    android:layout_below="@+id/hello_kid"
                    android:background="@drawable/button_diary"
                    android:layout_marginTop="50px"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/puzzle"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/puzzle"
                    android:layout_below="@+id/games"
                    android:layout_marginTop="56dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#c6deff"
                    android:text="What do you want to be Kid?"
                    tools:text="What do you want to be Kid?" />

                <EditText
                    android:id="@+id/career_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:ems="10"
                    android:backgroundTint="#ffff00"
                    android:cursorVisible="false"
                    android:inputType="textCapSentences"
                    android:layout_below="@+id/career"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/bnt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/journal"
                    android:layout_alignRight="@+id/journal"
                    android:layout_below="@+id/career_entry"
                    android:background="@drawable/button_style"
                    android:layout_marginTop="41dp"
                    android:text="Submit" />

                <TextView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/career"
                    android:layout_alignParentEnd="true"
                    android:textSize="20dp"
                    android:textColor="#ffdfdd"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/career"
                    android:layout_below="@+id/bnt10"
                    android:layout_marginTop="43dp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
