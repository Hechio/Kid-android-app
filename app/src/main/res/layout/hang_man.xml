<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41a317"
   android:label="Hang Man"
    app:menu="@menu/rules">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_hang"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        />

    <TextView
        android:id="@+id/hang_levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_hang"
        android:text="Get ready to have some fun Kid!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"  />

    <TextView
        android:id="@+id/man_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Choose your level"
        android:textSize="25dp"
        android:textColor="#00dfdf"
        android:textAlignment="center"

        android:layout_below="@+id/hang_levels"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




        <Button
            android:id="@+id/hang_level1"
            android:layout_width="327dp"
            android:layout_height="58dp"
            android:background="@drawable/button_style"
            android:layout_margin="20dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="Easy"
            android:layout_below="@+id/man_level" />

    <Button
        android:id="@+id/hang_level2"
        android:layout_width="327dp"
        android:layout_margin="20dp"
        android:layout_height="58dp"
        android:textColor="#000000"
        android:background="@drawable/button_style"
        android:layout_gravity="center"
        android:text="Medium"
        android:layout_below="@+id/hang_level1" />

    <Button
        android:id="@+id/hang_level3"
        android:layout_width="327dp"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_style"
        android:layout_gravity="center"
        android:text="Hard"
        android:textColor="#000000"
        android:layout_below="@+id/hang_level2" />


</RelativeLayout>
